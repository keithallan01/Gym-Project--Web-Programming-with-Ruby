<h1>Bookings</h1>

<table>
  <tr>
    <th>Member</th>
    <th>Activity</th>
    <th></th>
  </tr>
  <% for booking in @bookings %>
  <tr>
    <td><%= booking.members.full_name%></td>
    <td><%= booking.activities.activity_name%></td>
    <td><form action="/bookings/<%= booking.id %>/delete" method="POST"><input type="submit" value="Cancel Booking"></form></td>
  </tr>
  <% end %>
</table>

<hr>

<a href="/bookings/new">Add a New Booking</a>
